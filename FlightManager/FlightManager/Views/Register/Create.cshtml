@using FlightManager.Web.ViewModels.Users;
@model CreateUserViewModel


<div class="loginContainer" style="margin-top:30px">
    <form action="post" class="loginForm" style="width:50%; height:430px !important" method="post">

        <div style="width:100%;height:100%">
            <div class="leftFormContainer" style="width:50%">
                <label>Username</label>
                <input type ="text" asp-for="UserName"><br>
                <label>Password</label>
                <input type="password" asp-for="Password"><br>
                <label>Email</label>
                <input type="email" asp-for="Email"><br>
                <label>First name</label>
                <input type="text" asp-for="FirstName"><br>
                <label>Last name</label>
                <input type="text" asp-for="LastName"><br>
                <label>Nationality</label>
                <input type="text" asp-for="Nationality"><br>

            </div>
            <div class="rightFormContainer" style="width:50%">
                <label>EGN</label>
                <input type="text" asp-for="EGN"><br>
                <label>Address</label>
                <input type="text" asp-for="Address"><br>
                <label>Phone number</label>
                <input type="text" asp-for="PhoneNumber"><br>
                <label>Company name</label>
                <input type="text" asp-for="CompanyName"><br>
                <label>Company password</label>
                <input type="password" asp-for="CompanyPassword"><br>
            </div>

            <a asp-controller="Company" asp-action="Create" style="color:#FFF">Don't have a company?</a>
            <button type="submit" asp-controller="Register" asp-action="Create" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

