@model List<ApplicationUser>

@{
    ViewData["Title"] = "View";
}

<h1>Users</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Role</th>
            <th width="300px"> </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @(
                        i + 1
                        )
                </td>
                <td>@Model[i].FirstName</td>
                <td>@Model[i].LastName</td>
                <td>@Model[i].Role</td>
                <td>
                    <div class="buttons-grid">
                        <a class="btn btn-danger" type="submit" asp-action="Delete" asp-controller="Home" asp-route-id="@Model[i].Id"> <i class="bi bi-trash-fill"></i> Delete</a>
                        <a class="btn btn-warning" type="submit" asp-action="Edit" asp-controller="Home" asp-route-id="@Model[i].Id">Edit</a>
                        <a class="btn btn-info" type="submit" asp-action="Details" asp-controller="Home" asp-route-id="@Model[i].Id">Details</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>