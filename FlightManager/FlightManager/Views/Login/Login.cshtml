@using FlightManager.Web.ViewModels.Users;
@model LoginViewModel

<div class="loginContainer">
    <form action="#" class="loginForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="left-side-container">
            <label>Username</label><br>
            <input type="text" asp-for="UserName"><br>
            <span asp-validation-for="UserName" style="color:red"></span>
            <label>Password</label><br>
            <input type="password" asp-for="Password"><br>
            <span asp-validation-for="Password" style="color:red"></span>
            <label>Company name</label><br>
            <input type="text" asp-for="CompanyName"><br>
            <span asp-validation-for="CompanyName" style="color:red"></span>
            <label>Company password</label><br>
            <input type="password" asp-for="CompanyPassword"><br>
            <span asp-validation-for="CompanyPassword" style="color:red"></span>
            <button type="submit" class="btn btn-primary">Log in</button>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

