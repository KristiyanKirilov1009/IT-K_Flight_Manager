@model FlightManager.Models.ApplicationUser

<div class="sidebar">

    <h2 class="nav-title"><span> @User.Identity?.Name</span></h2>

    <!-- <h2 class="menu-header">General</h2> -->
    <nav>
        <ul>
            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li><a asp-action="Admin_Users" asp-controller="Roles" style="border-bottom:2px solid #f2f2f2;padding-bottom:3px;">Users</a></li>
            <li><a>Flights</a></li>
            <li><a asp-action="Admin_Reservations" asp-controller="Roles">Reservations</a></li>
            <li><a asp-action="Admin_MyProfile" asp-controller="Roles">My Profile</a></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>

        </ul>
    </nav>
</div>
<section id="homeSection" class="section-a admin-container" style="width:85%;height:100vh;margin:auto;margin-left:15%;background:#191D28;">
    <div class="center-form">

        <div class="users-container" id="usersContainer">

            <h3>Profile</h3>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UCN)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UCN)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Role)
                </dd>
            </dl>
        </div>
    </div>
</section>
<script>
    const reservationsButton = document.getElementById("reservationsButton");
    const reservationsSection = document.getElementById("reservationsContainer");

    const flightsButton = document.getElementById("flightsButton");
    const flightsSection = document.getElementById("flightsContainer");

    const usersButton = document.getElementById("usersButton");
    const usersContainer = document.getElementById("usersContainer");

    usersButton.addEventListener("click", () => {
        usersContainer.style.display = "block";
        flightsSection.style.display = "none";
        reservationsSection.style.display = "none";
    });
    flightsButton.addEventListener("click", () => {
        flightsSection.style.display = "block";
        reservationsSection.style.display = "none";
        usersContainer.style.display = "none";
    });
    reservationsButton.addEventListener("click", () => {
        flightsSection.style.display = "none";
        usersContainer.style.display = "none";
        reservationsSection.style.display = "block";
    })
</script>

<script src="~/js/script.js"></script>
